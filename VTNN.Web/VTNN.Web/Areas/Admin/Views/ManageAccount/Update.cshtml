@model VTNN.DataAccess.Data.User
@{
    ViewBag.Title = "Update";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="content container-fluid">
    <div class="row">
        <div class="col-xl-8 offset-xl-2">
            <!-- Page Header -->
            <div class="page-header">
                <div class="row">
                    <div class="col">
                        <h3 class="page-title">Sửa tài khoản</h3>
                    </div>
                </div>
            </div>
            <!-- /Page Header -->

            <div class="card">
                <div class="card-body">
                    <!-- Form -->
                    <form method="post" action="@Url.Action("Update","ManageAccount")">
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            <label>Mã tài khoản</label>
                            @Html.EditorFor(model => model.UserId, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        </div>
                        <div class="form-group">
                            <label>Email</label>
                            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Số điện thoại</label>
                            @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Họ tên</label>
                            @Html.EditorFor(model => model.FullName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.FullName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Địa chỉ</label>
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <label>Quyền</label>
                            <select class="form-control select" name="role">
                                <option>Quản trị</option>
                                <option>Người dùng</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label>Trạng thái</label>
                            <div class="status-toggle">
                                <input id="rating_1" name="is_active" class="check" type="checkbox" checked="">
                                <label for="rating_1" class="checktoggle">checkbox</label>
                            </div>
                            @*<div class="checkbox">
                                    @Html.EditorFor(model => model.Is_Active)
                                    @Html.ValidationMessageFor(model => model.Is_Active, "", new { @class = "text-danger" })
                                </div>*@
                        </div>
                        <div class="mt-4">
                            <button class="btn btn-primary" type="submit">
                                Cập nhật
                            </button>
                            <a href="@Url.Action("Index","ManageAccount")" class="btn btn-link">Huỷ</a>
                        </div>
                    </form>
                    @if (ViewBag.error != null)
                    {
                        <div class="alert alert-danger mb-2 text-center" role="alert">
                            @ViewBag.error
                        </div>
                    }
                    <!-- Form -->
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/jquery-3.4.1.js"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>